<% include partial/header %>

<h1 class='context'>Archive:
  <%= page.date.year %>

  <% if(page.date.month) { %>
  / <%= page.date.month %>
  <% } %>

  <% if(page.date.day) { %>
  / <%= page.date.day %>
  <% } %>
</h1>

<% if (page.content.length === 0) { %>

  <article>
    <p>No posts found</p>
  </article>

<% } else { %>

  <% page.content.forEach(function(post) { %>
    <article>
      <hgroup>
        <h1><a href='<%= post.url %>'><%= post.title %></a></h1>
        <time datetime='<%= post.date.datetime %>'><%= post.date.pretty %></time>
      </hgroup>

      <%- post.excerpt %>

      <p><a href='<%= post.url %>'>Read More</a>
    </article>
  <% }); %>

<% } %>

<% include partial/next-previous %>

<% include partial/footer %>
